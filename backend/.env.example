# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api
APP_NAME=Zharqyn Bala

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/zharqynbala?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Storage (S3 Compatible)
S3_ENDPOINT=https://storage.yandexcloud.net
S3_REGION=ru-central1
S3_BUCKET=zharqynbala-files
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# Payments - Kaspi Pay
KASPI_MERCHANT_ID=your-merchant-id
KASPI_API_KEY=your-kaspi-api-key
KASPI_WEBHOOK_SECRET=your-webhook-secret

# Payments - PayBox
PAYBOX_MERCHANT_ID=your-paybox-merchant-id
PAYBOX_SECRET_KEY=your-paybox-secret-key

# Notifications - Email
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@zharqynbala.kz

# Notifications - SMS
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+77XXXXXXXXX

# Video - Agora
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3000
