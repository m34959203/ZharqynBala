# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# Для Railway.app deployment
# ===================================

# Application
NODE_ENV=production
PORT=3001
API_PREFIX=api

# Database (Railway PostgreSQL)
# Railway автоматически создаст DATABASE_URL
DATABASE_URL=postgresql://user:password@host:port/database

# JWT Secrets (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-me-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=https://your-frontend-domain.com

# AWS S3 (для загрузки файлов)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=zharqyn-bala-uploads

# Payment Providers (Казахстан)
# Kaspi Pay
KASPI_MERCHANT_ID=your-kaspi-merchant-id
KASPI_API_KEY=your-kaspi-api-key
KASPI_WEBHOOK_SECRET=your-kaspi-webhook-secret

# PayBox
PAYBOX_MERCHANT_ID=your-paybox-merchant-id
PAYBOX_SECRET_KEY=your-paybox-secret-key

# Email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@zharqynbala.kz

# SMS (Twilio или другой провайдер)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+77001234567

# Video Consultations (Agora или другой)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# Redis (для кеширования и очередей)
# Railway может автоматически создать
REDIS_URL=redis://default:password@host:port

# Monitoring (Sentry)
SENTRY_DSN=your-sentry-dsn

# Logging
LOG_LEVEL=info
